! optimize the heat distribution of an object with four heaters
! so that the temperature at the center of each heater is as 
! desired. 
!
! This is a remake of the old test case to utilize internal
! optimization routines.
!
! P.R. 20.5.2020

Check Keywords warn

Header
  Mesh DB "." "spots"
  Include Path ""
  Results Directory ""
End

Run Control 
  Run Control Iterations = Integer 100

  Cost Function = Variable Time
    Real Procedure "CostFunction" "CostFunction"   

  Parameter Count = Integer 4
  Parameter Optimal Finish = Logical True
  Parameter Best File = File "optimize-best.dat"
  Parameter History File = File "optimize-history.dat"
  !Parameter History Append = Logical True
  !Parameter Guess File = "optimize-best0.dat"

  !Parameter Filetype = String 'table' ! 'dakota'
  !Parameter Row Offset = Integer 
  !Parameter Column Offset = Integer

  Cost Function = Variable Time
    Real Procedure "CostFunction" "CostFunction"   
  !Cost Function Target = Real 
  !Cost Function Absolute = Logical
  !Cost Function Maximize = Logical 

  Optimization Method = String "simplex"
  Simplex Relative Length Scale = Real 1.0 
  !Simplex Restart Interval = Integer 20
  !Simplex Restart Convergence Ratio = Real 1.0

  !Initial Step Size = Real
  !Max Step Size = Real
  !Step Size Relaxation Factor = Real

  Max Output Level = Integer 20 
End 

Simulation
  Coordinate System = String Cartesian
  Coordinate Mapping(3) = Integer 1 2 3
  Simulation Type = Steay State 
  Steady State Max Iterations = 1
  Output Intervals = 1
  Max Output Level = 20 
  Post File = "case.vtu"
End

Constants
  Stefan Boltzmann = 1.0
End

Body 1
  Name = "Body1"
  Equation = 1
  Material = 1
End

Body 2
  Name = "Body2"
  Body Force = 1
  Equation = 1
  Material = 1
End

Body 3
  Name = "Body3"
  Body Force = 2
  Equation = 1
  Material = 1
End

Body 4
  Name = "Body4"
  Body Force = 3
  Equation = 1
  Material = 1
End

Body 5
  Name = "Body5"
  Body Force = 4
  Equation = 1
  Material = 1
End

Equation 1
  Name = "Equation"
  Active Solvers = 1
End

Material 1
  Name = "Unity"
  Density = Real 1
  Heat Conductivity = Real 1
End

Body Force 1
  Name = "Heater1"
  Heat Source = $rpar(0)
End

Body Force 2
  Name = "Heater2"
  Heat Source = $rpar(1)
End

Body Force 3
  Name = "Heater3"
  Heat Source = $rpar(2)
End

Body Force 4
  Name = "Heater4"
  Heat Source = $rpar(3)
End


Solver 1
  Equation = Heat Equation
  Procedure = "HeatSolve" "HeatSolver"
  Variable = Temperature

  Linear System Solver = Iterative
  Linear System Iterative Method = BiCGStab
  Linear System Max Iterations = 300
  Linear System Convergence Tolerance = 1.0e-08
  Linear System Preconditioning = ILU0
  Linear System Residual Output = 20
  Linear System Abort Not Converged = False

  Steady State Convergence Tolerance = 1.0e-05
  Stabilize = True
  Nonlinear System Convergence Tolerance = 1.0e-05
  Nonlinear System Max Iterations = 1
  Nonlinear System Newton After Iterations = 3
  Nonlinear System Newton After Tolerance = 1.0e-02
  Nonlinear System Relaxation Factor = 1.0
End

Boundary Condition 1
  Name = "Sides"
  Target Boundaries = 1
  Temperature = Real 0
End

Solver 1 :: Reference Norm = 2.15705666E+01


